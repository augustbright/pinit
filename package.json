{
  "name": "quick-pin",
  "displayName": "Quick Pin",
  "publisher": "Augustbright",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/augustbright/quick-pin"
  },
  "description": "Pin folders and files. Reveal them in a click.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "pins",
          "name": "Quick Pins",
          "when": "quick-pin.showTreeView === true",
          "icon": "media/icon.svg",
          "contextualTitle": "Quick pins"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "pins",
        "contents": "Right click on a folder or file in the explorer - Pin Item"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "quick-pin.pinItem"
        }
      ],
      "view/item/context": [
        {
          "command": "quick-pin.renamePin",
          "when": "view == pins && viewItem == pin"
        },
        {
          "when": "view == pins",
          "command": "quick-pin.deletePin"
        }
      ],
      "view/title": [
        {
          "command": "quick-pin.deleteAllPins",
          "when": "view == pins",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "quick-pin.pinItem",
        "title": "Pin Item"
      },
      {
        "command": "quick-pin.renamePin",
        "title": "Rename Pin"
      },
      {
        "command": "quick-pin.deletePin",
        "title": "Delete Pin"
      },
      {
        "command": "quick-pin.revealAndOpen",
        "title": "Reveal and then open a selected folder"
      },
      {
        "command": "quick-pin.deleteAllPins",
        "title": "Delete all pins",
        "icon": "$(notebook-delete-cell)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  }
}